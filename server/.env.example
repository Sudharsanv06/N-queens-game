# Server environment variables
NODE_ENV=development
MONGO_URI=mongodb://localhost:27017/nqueens-game
PORT=5000

# IMPORTANT: Change this in production (minimum 32 characters)
JWT_SECRET=your-jwt-secret-key-minimum-32-characters-long-change-this
JWT_EXPIRES_IN=7d

# Deployed client origin (for CORS) - comma-separated
CLIENT_ORIGIN=http://localhost:5173,http://localhost:5174

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=

# Push Notifications (Optional)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=
